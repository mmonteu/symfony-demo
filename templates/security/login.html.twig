{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}


  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <h1 class="mt-4 mb-3">Connexion</h1>

        <form action="{{ path('security_login') }}" method="post">
              <div class="form-group">
                <input placeholder="Votre Pseudo ..." required name="_username" type="text" class="form-control">
              </div>

              <div class="form-group">
                <input placeholder="Mot de passe ..." required name="_password" type="password" class="form-control">
              </div>

              <div class="form-group">
                <button type="submit" class="btn btn-success">Connexion</button>
              </div>

              <hr>

              Pas inscris ? <a href="{{ path('security_registration') }}" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Inscription</a>
        </form>
      </div>
    </div>
  </div>


{% endblock %}
